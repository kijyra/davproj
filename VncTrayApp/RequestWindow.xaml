<Window  x:Class="VncTrayApp.RequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Запрос управления"
        Height="200" Width="350" 
        WindowStyle="None" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" Topmost="True"
        Background="#80F3F3F3" 
        BorderBrush="#0078D7" BorderThickness="2">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Name="InfoText" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,10" Foreground="Black" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Разрешить" Width="100" Margin="5" Click="Allow_Click" 
                        Background="#0078D7" Foreground="White" />
                <Button Content="Отклонить" Width="100" Margin="5" Click="Deny_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>