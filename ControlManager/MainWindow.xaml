<Window x:Class="ControlManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlManager"
        mc:Ignorable="d"
        Title="Управление подключениями" Height="600" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="WorkstationsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Место" Binding="{Binding DisplayName}" Width="2*" />
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User}" Width="1*" />
                <DataGridTextColumn Header="IP Адрес" Binding="{Binding Address}" Width="100" />

                <!-- Колонка действий RDP -->
                <DataGridTemplateColumn Header="RDP (Shadow)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Full" Click="Connect_Click" Tag="{Binding ProtocolLinksRDP.Full}" Margin="2" Padding="5,0"/>
                                <Button Content="View" Click="Connect_Click" Tag="{Binding ProtocolLinksRDP.View}" Margin="2" Padding="5,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Колонка действий VNC -->
                <DataGridTemplateColumn Header="VNC">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Full" Click="Connect_Click" Tag="{Binding ProtocolLinksVNC.Full}" Margin="2" Padding="5,0" Background="LightBlue"/>
                                <Button Content="View" Click="Connect_Click" Tag="{Binding ProtocolLinksVNC.View}" Margin="2" Padding="5,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
