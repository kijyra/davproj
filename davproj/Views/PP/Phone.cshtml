@model Phone
@{
    var workplacelist = ViewData["workplaces"] as List<Workplace>;
}

<form method="post" asp-controller="PP" asp-action="@ViewData["FormAction"]">
    <div class="modal-header">
        <h5 class="modal-title">Редактирование телефона</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="Model" placeholder="Модель телефона">
            <label asp-for="Model">Модель телефона</label>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="Number" placeholder="Номер телефона">
            <label asp-for="Number">Номер телефона</label>
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" asp-for="Ip" placeholder="IP-адрес">
            <label asp-for="Ip">IP-адрес</label>
            <span asp-validation-for="Ip" class="text-danger"></span>
        </div>
        <div class="input-group flex-nowrap">
            <input class="form-check-input"
                   type="checkbox"
                   asp-for="Handset"
                   id="HandsetCheckbox">
            <label class="form-check-label" for="HandsetCheckbox">
                Радиотелефон
            </label>
        </div>
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping"><i class="bi bi-tag"></i></span>
            <input type="text" class="form-control" placeholder="Название в базе" aria-label="Название в базе" aria-describedby="addon-wrapping" name="nameInBase">
        </div>
        <div class="form-floating">
            <select class="form-select"
                    asp-for="Workplace"
                    asp-items="@(new SelectList(workplacelist, "Id", "Name"))">
                <option value="">-- Не выбрано --</option>
            </select>
            <label asp-for="Workplace">Выберите рабочее место</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
        <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    </div>
</form>