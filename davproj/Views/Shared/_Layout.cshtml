<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico?v=2" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/davproj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <style>
        html {
            transition: color 0.3s ease, background-color 0.3s ease;
        }
        :root, [data-bs-theme="light"] {
            transition: all 0.3s ease-in-out;
        }

        [data-bs-theme="dark"] {
            transition: all 0.3s ease-in-out;
        }
        #theme-icon {
            display: inline-block;
            transition: transform 0.4s ease-in-out;
        }
        .rotate-icon {
            transform: rotate(180deg);
        }

        header {
            background-color: var(--bs-secondary-bg);
            color: var(--bs-body-color);
            border-bottom: 1px solid var(--bs-border-color);
        }

        body {
            padding-top: 56px;
        }

        .select2-container .select2-selection--single {
            height: calc(2.5rem + 2px) !important;
            padding: .5rem .75rem;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <header class="fixed-top">
        <div class="px-3 py-2 bg-body-secondary border-bottom border-bottom-subtle">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-lg-end">
                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        @{
                            Func<string, string> activeClass = (page) => (ViewData["ActivePage"]?.Equals(page) ?? false) ? "active" : "text-body-secondary";
                        }
                        <li>
                            <a class="nav-link px-2 @activeClass("Home")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-file-earmark-fill"></i>
                                Главная
                            </a>
                        </li>
                        @if (Context?.User?.Identity?.IsAuthenticated == true)
                        {
                            <li>
                                <a class="nav-link px-2 @activeClass("View")" asp-area="" asp-controller="View" asp-action="Index">
                                    <i class="bi bi-person-workspace"></i>
                                    Рабочие места
                                </a>
                            </li>
                        }
                        <li>
                            @{
                                string userName = User.Identity?.IsAuthenticated == true 
                                    ? User.Identity.Name?.Split('\\').ElementAtOrDefault(1) ?? "Пользователь"
                                    : "Войти";
                                string settingsClass = Context!.User.Identity?.IsAuthenticated == true 
                                    && ViewData["ActivePage"]?.ToString() == "Settings" 
                                    ? "active" 
                                    : "text-body-secondary";
                            }
                            <a class="nav-link px-2 @settingsClass" asp-area="" asp-controller="Home" asp-action="Settings">
                                <i class="bi bi-sliders2-vertical"></i>
                                @userName
                            </a>
                        </li>
                        <li>
                            <button class="btn btn-link p-0" id="theme-toggle" title="Toggle theme" type="button">
                                <i class="bi bi-moon-fill" id="theme-icon"></i>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <div id="modal-container" class="modal fade" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <!-- Модальные окна -->
                    </div>
                </div>
            </div>
            <div id="modal-container-child" class="modal fade" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <!-- Вторые модальные окна -->
                    </div>
                </div>
            </div>
            <div class="modal fade" id="deleteConfirmationModal" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Подтверждение удаления</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Вы уверены, что хотите удалить выбранный объект?<br />
                            Это действие необратимо
                        </div>
                        <div class="modal-footer">
                            <form id="deleteForm" method="post">
                                <input type="hidden" name="id" id="deleteObjectId" value="" />
                                <button type="submit" id="confirmDeleteSubmit" class="btn btn-danger">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(function () {
            // Select2
            $(document).ready(function() {
                targetContainer.find('.modal-content').html(data);
                targetContainer.modal('show');
                $('.js-action-select').select2('destroy').select2({
                    theme: 'bootstrap-5',
                    width: '100%',
                    placeholder: 'Выберите значение',
                    allowClear: true,
                    dropdownParent: $('#yourModalId') // КРИТИЧНО: если селект в модальном окне
                });
            });
            // 1. ОТКРЫТИЕ ДИНАМИЧЕСКИХ ОКОН
            $('body').on('click', '.btn-open-modal, .btn-open-child-modal', function (e) {
                e.preventDefault();
                var url = $(this).attr('href') || $(this).data('url');
                if (!url || url === '#') return;
                $('.js-action-select').removeClass('last-active-select');
                $(this).closest('.input-group').find('.js-action-select').addClass('last-active-select');
                var isChild = $(this).hasClass('btn-open-child-modal');
                var targetContainer = isChild ? $('#modal-container-child') : $('#modal-container');
                $.get(url).done(function (data) {
                    targetContainer.find('.modal-content').html(data);
                    targetContainer.modal('show');
                }).fail(function() {
                    alert("Не удалось загрузить форму.");
                });
            });

            // 2. САБМИТ ФОРМЫ (ОБЩАЯ ФУНКЦИЯ)
            function submitModalForm(form, targetModalId) {
                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function(data) {
                        if (data.success) {
                            $(`#${targetModalId}`).modal('hide');
                            if (targetModalId === 'modal-container') {
                                location.reload();
                            } else if (targetModalId === 'modal-container-child' && data.item) {
                                var $targetSelect = $('.js-action-select.last-active-select');
                                if ($targetSelect.length) {
                                    var newOption = new Option(data.item.title, data.item.id, true, true);
                                    $targetSelect.append(newOption).trigger('change');
                                    $targetSelect.removeClass('last-active-select');
                                }
                            }
                        } else {
                            $(`#${targetModalId} .modal-content`).html(data);
                        }
                    },
                    error: function(xhr) {
                        console.error(`AJAX Error in ${targetModalId}`);
                        $(`#${targetModalId} .modal-content`).html(xhr.responseText);
                    }
                });
            }

            // САБМИТ РОДИТЕЛЬСКОГО ОКНА
            $(document).on('submit', '#modal-container form', function(e) {
                e.preventDefault();
                submitModalForm($(this), 'modal-container');
            });

            // САБМИТ ДОЧЕРНЕГО ОКНА
            $(document).on('submit', '#modal-container-child form', function(e) {
                e.preventDefault();
                submitModalForm($(this), 'modal-container-child');
            });

            // 3. УДАЛЕНИЕ (Открытие модалки)
            $(document).on('click', '.btn-trigger-delete', function(e) {
                e.preventDefault();
                var actionUrl = $(this).attr('data-url');
                var modalId = $(this).attr('data-modal-id') || 'deleteConfirmationModal';
                var $confirmModal = $('#' + modalId);
                if (actionUrl && actionUrl !== "0") {
                    var selectedId = /\d+$/.exec(actionUrl)?.[0] || '';
                    $('#deleteObjectId').val(selectedId);
                    $('#deleteForm').attr('action', actionUrl);
                    $confirmModal.modal('show');
                }
            });

            // САБМИТ ФОРМЫ УДАЛЕНИЯ
            $(document).on('submit', '#deleteForm', function(e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    dataType: 'json',
                    success: function(data) {
                        if (data.success) {
                            var $confirmModal = $('#deleteConfirmationModal');
                            $confirmModal.modal('hide');
                            var urlToRefresh = $confirmModal.data('url-source');
                            if (urlToRefresh) {
                                $.get(urlToRefresh).done(function(newData) {
                                    $('#modal-container').find('.modal-content').html(newData);
                                });
                            } else {
                                location.reload();
                            }
                        } else {
                            alert("Ошибка при удалении");
                        }
                    }
                });
            });

            // 4. ЛОГИКА АКТИВАЦИИ КНОПОК EDIT/DELETE
            $(document).on('change', '.js-action-select', function () {
                var selectedId = $(this).val();
                var $container = $(this).closest('.input-group');
                var $editBtn = $container.find('.js-btn-edit');
                var $deleteBtn = $container.find('.js-btn-delete');
                if (selectedId && selectedId !== "") {
                    var editTemplate = $editBtn.attr('data-url-template');
                    var deleteTemplate = $deleteBtn.attr('data-url-template');
                    if (editTemplate) {
                        $editBtn.attr('href', editTemplate.replace('0', selectedId)).removeClass('disabled');
                    }
                    if (deleteTemplate) {
                        $deleteBtn.attr('data-url', deleteTemplate.replace('0', selectedId)).removeClass('disabled');
                    }
                } else {
                    $editBtn.addClass('disabled').removeAttr('href');
                    $deleteBtn.addClass('disabled').removeAttr('data-url');
                }
            });
        });

        // 5. СМЕНА ТЕМЫ
        (function () {
            'use strict';
            const getStoredTheme = () => localStorage.getItem('theme');
            const setStoredTheme = theme => localStorage.setItem('theme', theme);
            const getPreferredTheme = () => {
                const storedTheme = getStoredTheme();
                if (storedTheme) {
                    return storedTheme;
                }
                return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
            };
            const setTheme = theme => {
                if (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    document.documentElement.setAttribute('data-bs-theme', 'dark');
                } else {
                    document.documentElement.setAttribute('data-bs-theme', theme);
                }
            };
            setTheme(getPreferredTheme());
            const showActiveTheme = (theme, focus = false) => {
                const themeToggle = document.getElementById('theme-toggle');
                const themeIcon = document.getElementById('theme-icon');
                if (!themeToggle || !themeIcon) return;
                themeIcon.classList.add('rotate-icon');
                const themeText = document.getElementById('theme-text');
                const isDarkMode = theme === 'dark' ||
                    (theme === 'auto' && window.matchMedia('(prefers-color-scheme: dark)').matches);
                setTimeout(() => {
                    themeIcon.classList.remove('bi-moon-fill', 'bi-sun-fill');
                    themeIcon.classList.add(isDarkMode ? 'bi-sun-fill' : 'bi-moon-fill');
                    themeIcon.classList.remove('rotate-icon');
                }, 200);

                if (focus) {
                    themeToggle.focus();
                }
            };
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
                const storedTheme = getStoredTheme();
                if (storedTheme !== 'light' && storedTheme !== 'dark') {
                    setTheme(getPreferredTheme());
                    showActiveTheme(getPreferredTheme());
                }
            });
            window.addEventListener('DOMContentLoaded', () => {
                showActiveTheme(getPreferredTheme());
                document.getElementById('theme-toggle').addEventListener('click', () => {
                    const currentTheme = getStoredTheme() || getPreferredTheme();
                    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                    setStoredTheme(newTheme);
                    setTheme(newTheme);
                    showActiveTheme(newTheme, true);
                });
            });
        })();

        // 6. НАСТРОЙКИ TOASTR
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };

        // 7. ФУНКЦИЯ ПОДКЛЮЧЕНИЯ VNC
        async function connectVnc(pcId, ip, fullControl, requestUser, btn) {
            if (!btn) return;
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
            toastr.info("Проверка доступа...", "VNC");
            try {
                const url = `/VNC/Connect?pcId=${pcId}&fullControl=${fullControl}&requestUser=${!!requestUser}`;
                const response = await fetch(url, { method: 'POST', headers: { 'Accept': 'application/json' } });
                const result = await response.json();
                if (response.ok) {
                    toastr.success(result.message || "Успешно", "VNC");
                    if (result.uri) {
                        window.location.href = result.uri;
                    }
                } else {
                    toastr.error(result.message || "Ошибка сервера", `Статус: ${response.status}`);
                    if (launchWindow) launchWindow.close();
                }
            } catch (error) {
                console.error("VNC JS Error:", error);
                toastr.error("Сетевая ошибка: проверьте соединение с сервером", "Критическая ошибка");
                if (launchWindow) launchWindow.close();
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        // Обновление данных о ПК
            async function requestHardwareUpdate(hostname, btn) {
            if (!hostname) return;

            const originalHtml = btn.innerHTML;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
            btn.classList.add('disabled');

            try {
                const response = await fetch(`/api/Hardware/request-update/${hostname}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    toastr.success(`Команда на обновление ${hostname} успешно отправлена.`, 'Агент активен');

                    setTimeout(() => {
                        location.reload();
                    }, 5000);
                } else {
                    const errorText = await response.text();
                    toastr.error(`Ошибка: ${errorText}`, 'Ошибка агента');
                }
            } catch (e) {
                toastr.warning('Сервер не отвечает. Проверьте соединение.', 'Связь потеряна');
            } finally {
                btn.innerHTML = originalHtml;
                btn.classList.remove('disabled');
            }
        }

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
